<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@drawable/background" >
 <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" 
            android:layout_margin="1dp">

			<Button
			        android:id="@+id/Button06"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:onClick="at_the_border"
			        android:layout_marginTop="4dp"
			        android:text="At the Border"
			        android:textColor="#EEEEE0" />
		   <Button
			        android:id="@+id/But"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:onClick="greetings"
			        android:layout_marginTop="4dp"
			        android:text="Greetings"
			        android:textColor="#EEEEE0" />
			<Button
			        android:id="@+id/Button05"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:onClick="introductions"
			        android:layout_marginTop="4dp"
			        android:text="Introductions"
			        android:textColor="#EEEEE0" />
			<Button
			        android:id="@+id/Button04"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:onClick="farewells"
			        android:layout_marginTop="4dp"
			        android:text="Farewells"
			        android:textColor="#EEEEE0" />
			<Button
			        android:id="@+id/Button03"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"			        
			        android:layout_marginTop="4dp"
			        android:onClick="accommodations"
			        android:text="Accommodations"
			        android:textColor="#EEEEE0" />
			<Button
			        android:id="@+id/Button02"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"			        
			        android:layout_marginTop="4dp"
			        android:onClick="renting_a_car"
			        android:text="Renting A Car"
			        android:textColor="#EEEEE0" />
			<Button
			        android:id="@+id/Button01"
			       android:layout_width="fill_parent"
			        android:layout_height="wrap_content"			       
			        android:layout_marginTop="4dp"
			        android:onClick="dining_out"
			        android:text="Dining Out"
			        android:textColor="#EEEEE0" />
			<Button
			        android:id="@+id/button1"
			       android:layout_width="fill_parent"
			        android:layout_height="wrap_content"			        
			        android:layout_marginTop="4dp"
			        android:onClick="by_train"
			        android:text="By Train"
			        android:textColor="#EEEEE0" />
			<Button
			        android:id="@+id/butto"
			       android:layout_width="fill_parent"
			        android:layout_height="wrap_content"			        
			        android:layout_marginTop="4dp"
			        android:onClick="by_plane"
			        android:text="By Plane"
			        android:textColor="#EEEEE0" />
		    <Button
			        android:id="@+id/butt"
			       android:layout_width="fill_parent"
			        android:layout_height="wrap_content"			        
			        android:layout_marginTop="4dp"
			        android:onClick="health"
			        android:text="Health"
			        android:textColor="#EEEEE0" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>